@model IEnumerable<Bugify.UI.Models.Dto.TaskDto>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1 class='mt-3'>Tasks</h1>

<div class="d-flex justify-content-end">
    <a class ="btn btn-secondary" asp-controller="Task" asp-action="Create"> Add Task</a>
</div>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>DueDate</th>
        <th>ProgressId</th>
    </tr>
    </thead>
<tbody>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@task.DueDate</td>
            <td>@task.ProgressId</td>
            <td>@task.ProgressName</td>
            <td>
                <a asp-controller="Task" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-light">Edit</a>
            </td>
        </tr>
    }
</tbody>

</table>