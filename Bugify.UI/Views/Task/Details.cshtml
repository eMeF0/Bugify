@model Bugify.UI.Models.Dto.TaskDto

@{
    ViewData["Title"] = "Task Details";
}


<h2 class="mt-3">Task Details</h2>
<hr/>

<div class="mt-3">
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        
        <dt class="col-sm-2">DueDate</dt>
        <dd class="col-sm-10">@Model.DueDate?.ToString("dd.MM.yyyy")</dd>
        
        <dt class="col-sm-2">Progress</dt>
        <dd class="col-sm-10">@Model.ProgressName</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-controller="Task"
       asp-action="Edit"
       asp-route-id="@Model.Id"
       class="btn btn-primary">Edit</a>
    
    <a asp-controller="Task"
       asp-action="Index"
       class="btn btn-secondary ms-2">Back</a>
</div>
